<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Add New Scheme</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        margin: 30px;
        font-family: Arial, sans-serif;
      }
      h1 {
        margin-bottom: 20px;
      }
      /* Overlay for loading spinner */
      .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 2000;
      }
      .spinner-overlay.show {
        display: flex;
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <div class="navbar">
          <h1 id="nav-header">EWA "Rajab"</h1>
          <div class="nav-links">
            <a
              href="/auth/sign-out"
              class="btn btn-primary"
              onclick="clearLoginNotification()"
              >Sign Out</a
            >
            <a
              href="/schemes/dashBoard"
              class="btn btn-primary"
              onclick="clearLoginNotification()"
              >Home</a
            >
          </div>
        </div>
      </div>
    </nav>

    <div class="container" style="margin-top: -80px">
      <h1 style="display: flex; justify-content: center; margin-top: 150px">
        Add New Scheme
      </h1>
      <div class="row">
        <div class="col-md-5 mx-auto">
          <div id="first">
            <form action="/schemes/create" method="POST" name="addNewService">
              <!-- this is the localhost:3000 path without any thing will transfer you to the form action -->
              <br />
              <div>
                <label for="Sch_Ref">Reference Number</label>
                <input
                  type="text"
                  name="Sch_Ref"
                  class="form-control"
                  id="Sch_Ref"
                  placeholder="Enter Your New Reference Number"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="APPNUMBER">Application Number</label>
                <input
                  type="text"
                  name="APPNUMBER"
                  class="form-control"
                  id="APPNUMBER"
                  placeholder="Enter The Application Number"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="BLK">Block</label>
                <input
                  type="text"
                  name="BLK"
                  class="form-control"
                  id="BLK"
                  placeholder="Enter Block Number"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="SUPERVISOR">SUPER VISOR</label>
                <input
                  type="text"
                  name="SUPERVISOR"
                  class="form-control"
                  id="SUPERVISOR"
                  placeholder="Enter The SUPER VISOR"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="ContractorName">Contractor Name</label>
                <input
                  type="text"
                  name="ContractorName"
                  class="form-control"
                  id="ContractorName"
                  placeholder="Enter The Contractor Name"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="Title1">Title</label>
                <input
                  type="text"
                  name="Title1"
                  class="form-control"
                  id="Title1"
                  placeholder="Enter The Title"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="STATUS">STATUS</label>
                <input
                  type="text"
                  name="STATUS"
                  class="form-control"
                  id="STATUS"
                  placeholder="Enter The Status"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="PERCENTAGE">PERCENTAGE</label>
                <input
                  type="text"
                  name="PERCENTAGE"
                  class="form-control"
                  id="PERCENTAGE"
                  placeholder="Enter The PERCENTAGE"
                />
              </div>
              <br />
              <div class="form-group">
                <label for="DATE_OF_COMPLETE">DATE OF COMPLETE</label>
                <input
                  type="date"
                  name="DATE_OF_COMPLETE"
                  class="form-control"
                  id="DATE_OF_COMPLETE"
                  placeholder="Enter The DATE OF COMPLETE"
                />
                <br />
                <div class="form-group">
                  <label for="NUMBEROFSS">NUMBER OF Substations</label>
                  <input
                    type="text"
                    name="NUMBEROFSS"
                    class="form-control"
                    id="NUMBEROFSS"
                    placeholder="Enter The Number Of Substations"
                  />
                </div>
                <br />
                <div class="form-group">
                  <label for="APPSTATUS">APP STATUS</label>
                  <input
                    type="text"
                    name="APPSTATUS"
                    class="form-control"
                    id="APPSTATUS"
                    placeholder="Enter The App Status"
                  />
                </div>
                <br />
                <div class="form-group">
                  <label for="DATEOFMEASUREMENT">DATE OF MEASUREMENT</label>
                  <input
                    type="date"
                    name="DATEOFMEASUREMENT"
                    class="form-control"
                    id="DATEOFMEASUREMENT"
                    placeholder="Enter The Date Of Measurment"
                  />
                </div>
                <br />
                <div class="form-group">
                  <label for="CONTRACTORAPPRAISAL">CONTRACTOR APPRAISAL</label>
                  <input
                    type="text"
                    name="CONTRACTORAPPRAISAL"
                    class="form-control"
                    id="CONTRACTORAPPRAISAL"
                    placeholder="Enter The Contractor Appraisal"
                  />
                </div>
                <br />
                <div class="form-group">
                  <label for="AREA">AREA</label>
                  <input
                    type="text"
                    name="AREA"
                    class="form-control"
                    id="AREA"
                    placeholder="Enter The Area"
                  />
                </div>
                <br />
                <div class="form-group">
                  <label for="TYPE">TYPE</label>
                  <input
                    type="text"
                    name="TYPE"
                    class="form-control"
                    id="TYPE"
                    placeholder="Enter The Type"
                  />
                </div>
                <br />
                <div class="col-md-14 text-center">
                  <button
                    type="submit"
                    style="font-size: 25px"
                    class="btn btn-block mybtn btn-primary tx-tfm"
                  >
                    Add
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Overlay for loading spinner -->
    <div class="spinner-overlay" id="loadingOverlay">
      <div class="spinner-border text-light" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <!-- Toast container for notifications -->
    <div class="toast-container">
      <div
        id="successToast"
        class="toast align-items-center text-white bg-success"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">Scheme added successfully!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <div
        id="errorToast"
        class="toast align-items-center text-white bg-danger"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">
            An error occurred while adding the scheme!
          </div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      $(document).ready(function () {
        $('form[name="addNewService"]').on("submit", function (event) {
          event.preventDefault() // Prevent default form submission
          $("#loadingOverlay").addClass("show") // Show spinner overlay

          $.ajax({
            url: $(this).attr("action"),
            type: $(this).attr("method"),
            data: $(this).serialize(),
            success: function () {
              $("#loadingOverlay").removeClass("show") // Hide spinner overlay
              const toast = new bootstrap.Toast($("#successToast"))
              $("#successToast").show() // Show success message toast
              toast.show()
            },
            error: function () {
              $("#loadingOverlay").removeClass("show") // Hide spinner overlay
              const toast = new bootstrap.Toast($("#errorToast"))
              $("#errorToast").show() // Show error message toast
              toast.show()
            },
          })
        })
      })
    </script>
  </body>
</html>
