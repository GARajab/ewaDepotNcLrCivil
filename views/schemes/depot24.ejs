            display: none;
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

        .spinner-overlay.show {
            display: flex;
        }

        .apple-spinner {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 5px solid rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            border-top-color: #3498db;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
